// Save as minimal-test.js
const http = require('http');

console.log('Starting minimal test server...');

const server = http.createServer((req, res) => {
  console.log('Request received:', req.method, req.url);
  
  // Set headers
  res.writeHead(200, {
    'Content-Type': 'text/html',
    'Access-Control-Allow-Origin': '*'
  });
  
  // Send simple HTML response
  res.end(`
    <!DOCTYPE html>
    <html>
    <head><title>Minimal Test</title></head>
    <body>
        <h1>‚úÖ Server is Working!</h1>
        <p>Time: ${new Date().toLocaleString()}</p>
        <p>URL: ${req.url}</p>
        <p>Method: ${req.method}</p>
    </body>
    </html>
  `);
});

server.listen(3333, () => {
  console.log('‚úÖ Minimal server running on http://localhost:3333');
  console.log('üìã Test this URL in your browser: http://localhost:3333');
});

server.on('error', (error) => {
  console.error('‚ùå Server error:', error);
});
